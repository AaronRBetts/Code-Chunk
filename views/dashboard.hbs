<h2>{{name}}!</h2>
{{#if chunks}}
<p>Check out your Chunks</p>
<table class="striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th>Language</th>
        </tr>
    </thead>
    <tbody>
        {{#each chunks}}
        <tr>
            <td>
                <ul class="collapsible">
                    <li>
                        <div class="collapsible-header"><i class="fa fa-plus"></i>
                            <h6><a href="/chunks/edit/{{_id}}">{{title}}</a></h6>
                        </div>
                        <div class="collapsible-body"><span>{{body}}</span></div>
                    </li>
                </ul>
            </td>
            <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm a'}}</td>
            <td><span class="dash-status">{{status}}</span></td>
            <td>{{language}}</td>
            <td>
                <a class="btn btn-float orange" href="/chunks/edit/{{_id}}">
                    <i class="fas fa-edit"></i>
                </a>
                <form action="/chunks/{{_id}}" method="POST" id="delete-form">
                    <input type="hidden" name="method" value="DELETE">
                    <button type="submit" class="btn red">
                        <i class="fas fa-trash"></i>
                    </button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>You don't have any saved Code Chunks</p>
{{/if}}